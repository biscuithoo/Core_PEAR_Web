

@model CreateRoleViewModel 

@{

    ViewData["Title"] = "Create New Role";
    //link = "~/admin/createrole";
}


<div class="createrole">

    <div class="row">
        <div class="col-md-12">
            <h2>Create New Role</h2>
        </div>
    </div>
    <form class="p-4" method="post">

        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="float-right">
                    @{ string from = Model.From; }
                    <button type="submit" asp-route-from="@from" class="btn btn-primary">Create Role</button>
                    <a asp-action="ListRoles" asp-route-from="@from" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}