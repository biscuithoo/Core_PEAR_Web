@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    string from = Model.From;

}

<div class="editrole">

    <div class="row">
        <div class="col-md-12">
            <h2>Edit Role</h2>
        </div>
    </div>

    <form class="p-4" method="post">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <input asp-for="RoleName" disabled class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <div class="float-right">
                    @*<button type="submit" class="btn btn-primary">Update Role</button>*@
                    <a asp-action="ListRoles" asp-route-from="@from" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>

        <div class="text-danger">@ViewBag.error</div>
        <div class="card">
            <div class="card-header">
                <h3>Users in this role</h3>
            </div>
            <div class="card-body">

                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }

                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <div class="float-right">
                    <a asp-action="editusersinrole" asp-controller="administrator" asp-route-roleId="@Model.Id" asp-route-from="@from" class="btn btn-primary" style="width:auto">Add or Remove Users</a>
                </div>
            </div>
        </div>
    </form>
</div>
