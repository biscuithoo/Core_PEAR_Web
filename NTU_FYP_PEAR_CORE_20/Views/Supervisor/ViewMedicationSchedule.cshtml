@{
    ViewData["Title"] = "Patient Management";
}
<div id="app">
    <div class="buttonGroup">
        <button id="activeButton" v-on:click="getPatients('&isActive=1')" class="buttonSelector">List View</button>
        <button id="inactiveButton" v-on:click="getPatients('&isActive=0')" class="buttonSelector">Timetable View</button>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            Patients' Medication Schedule for {{date}}
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover dt-responsive compact" id="sample_3" cellspacing="0">
                <thead>
                    <tr>
                        <th class="min-tablet">Patient</th>
                        <th class="desktop4">Prescription</th>
                        <th class="desktop4">Allocated Time</th>
                        <th class="desktop4">Status</th>
                        <th class="desktop4">Administered By</th>
                        <th class="hidden"></th>
                    </tr>
                </thead>
                <tbody>
                  
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var app = new Vue({
            el: '#app',
            data() {
                return {
                    date: new Date()
                }
            },
            mounted() {
            },
            methods: {
            }
        });
    </script>
}
