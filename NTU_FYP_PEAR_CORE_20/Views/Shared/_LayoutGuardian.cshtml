<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/ico" href="~/images/pear_sq.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="../Content/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/components-md.css" type="text/css" />
    <link rel="stylesheet" href="~/css/plugins-md.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css//stepper-style.css" type="text/css" />
    <link rel="stylesheet" href="~/layout3/css/layout.min.css" type="text/css" />
    <link rel="stylesheet" href="~/layout3/css/theme" id="style_color" />
    <link rel="stylesheet" href="~/layout3/css/custom.min.css" type="text/css" />
    <link rel="stylesheet" href="~/layout3/css/custom.min.css" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom_style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/pear_hd.png" title="PEAR" alt="PEAR" style="width:100px;height:auto;margin:-20px;padding:0px;" />
                </a>
                <div class="container">
                    @Html.Partial("_NavBarGuardian")
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - PEAR
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/vue/vue.js"></script>
    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet">
    @RenderSection("Scripts", required: false)
</body>
</html>
